<div>
  <%= form_for([@user, @order]) do |f| %>    
    <h1>Select number of beacons</h1>    
    <div class="p10">
      <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
        <%= f.submit :-, class: "btn btn-primary" %>
        <div class="input-group-prepend" style="padding-left: 5px; padding-right: 5px;">
          <%= f.text_field :beacons, class:"form-control", id: "beacons_id"%>
        </div>        
        <%= f.submit :+, class: "btn btn-primary" %>      
      </div>  
      <%= @order.errors if @order.errors.count > 0 %>
      <% if (@user.sub_seats < @order.beacons) %>
        <div class="alert alert-danger" role="alert">
          You are about to order more iBeacons than your current subscription seats
        </div>
      <%end%>
      <label for="disabledTextInput">Total price: <b>$<%=@order.total_price%></label></b>
      <div>
      <!-- make confirm work to set beacons and to redirect to next -->
        <%= f.submit :confirm, class: "btn btn-success" %>
      </div>
    </div>
  <%end%>
</div>